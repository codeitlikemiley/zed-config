{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": false,
  "theme": "Everforest Dark",
  "base_keymap": "VSCode",
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": true,
  "vertical_scroll_margin": 0,
  "tabs": {
    "close_position": "right",
    "git_status": true
  },
  "chat_panel": {
    "button": false
  },
  "confirm_quit": true,
  "collaboration_panel": {
    "button": false
  },
  "scrollbar": {
    "show": "never"
  },
  "assistant": {
    "version": "1",
    "enabled": true,
    "button": true,
    "dock": "right",
    "default_width": 320,
    "default_height": 320,
    "provider": {
      "name": "openai",
      "default_model": "gpt-4o"
    }
  },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "copilot": {
    "disabled_globs": [".env"]
  },
  "show_copilot_suggestions": false,
  "languages": {
    "Rust": {
      "indent_guides": {
        "enabled": false
      },
      "tab_size": 4,
      "show_inline_completions": false
    },
    "TOML": {
      "indent_guides": {
        "enabled": false
      }
    },
    "JSON": {
      "indent_guides": {
        "enabled": false
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        },
        "cargo": {
          "allFeatures": true,
          "loadOutDirsFromCheck": true,
          "runBuildScripts": true
        },
        "procMacro": {
          "enable": true,
          "ignored": {
            "async-trait": ["async_trait"],
            "napi-derive": ["napi"],
            "async-recursion": ["async_recursion"],
            "leptos_macro": ["server"]
          }
        }
      }
    }
  }
}
